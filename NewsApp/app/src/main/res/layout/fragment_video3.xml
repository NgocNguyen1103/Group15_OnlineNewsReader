<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ngoc_works.Video3Fragment"
    android:id="@+id/video3_fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10.5dp"
        android:layout_marginTop="50dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:id="@+id/thumb"
            android:src="@drawable/gold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/play"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp" />

            <TextView
                android:fontFamily="sans-serif-condensed-light"
                android:id="@+id/authors"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="By Jack Bantock, CNN"
                android:textColor="#AAA9A9"/>

        </LinearLayout>
        <TextView
            android:fontFamily="sans-serif-black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_gravity="center_vertical"
            android:text="Bryson DeChambeau wins second major"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:fontFamily="sans-serif-condensed-light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/intro"
            android:textSize="19dp"
            android:text="American Bryson DeChambeau won his second US Open title on Sunday, edging Rory McIlroy in a nerve-shredding finale at Pinehurst No. 2 in Pinehurst, North Carolina."/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:fontFamily="sans-serif-condensed-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upload_time"
                android:textColor="#AAA9A9"
                android:text="June 17, 2024 | 11:24 am GMT+7 | Sport"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="18dp"
                android:layout_marginLeft="148dp"
                android:src="@drawable/book_mark" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>