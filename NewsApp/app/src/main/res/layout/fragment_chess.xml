<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/chess_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/magnus" />

    <TextView
        android:id="@+id/chess_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grandmaster Magnus Carlsen prepares for the World Championship."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/chess_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Magnus Carlsen, the multiple-time World Champion, is preparing for the upcoming World Chess Championship. This tournament is expected to be an intense showdown between the world's top grandmasters."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:paddingTop="4dp"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chess_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 hours ago"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />


        <TextView
            android:paddingTop="2dp"

            android:id="@+id/chess_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" | Chess"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:paddingLeft="4dp" />
        <ImageView
            android:id="@+id/save_article_icon"
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:layout_gravity="end"
            android:contentDescription="Save article"
            android:src="@drawable/book_mark"
            android:layout_marginLeft="16dp" />
    </LinearLayout>



</LinearLayout>
