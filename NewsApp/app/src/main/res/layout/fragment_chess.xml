<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Hình ảnh bài viết -->
    <ImageView
        android:id="@+id/chess_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/magnus" />

    <!-- Tiêu đề bài viết -->
    <TextView
        android:id="@+id/chess_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đại kiện tướng Magnus Carlsen chuẩn bị cho giải đấu thế giới"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingTop="8dp" />

    <!-- Mô tả ngắn bài viết -->
    <TextView
        android:id="@+id/chess_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Magnus Carlsen, nhà vô địch thế giới nhiều lần, đang chuẩn bị cho giải đấu cờ vua thế giới sắp tới. Đây là giải đấu được kỳ vọng sẽ là cuộc đối đầu kịch tính giữa các kiện tướng hàng đầu."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:paddingTop="4dp"
        android:paddingBottom="8dp" />

    <!-- Phần thông tin thời gian và danh mục -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Thời gian đăng bài -->
        <TextView
            android:id="@+id/chess_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 giờ trước"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Danh mục tin tức -->
        <!-- Danh mục tin tức -->
        <TextView
            android:paddingTop="2dp"

            android:id="@+id/chess_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" | Cờ vua"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:paddingLeft="4dp" />
        <ImageView
            android:id="@+id/save_article_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:contentDescription="Save article"
            android:src="@drawable/book_mark"
            android:layout_marginLeft="16dp" />
    </LinearLayout>

    <!-- Icon lưu trữ bài viết -->


</LinearLayout>
