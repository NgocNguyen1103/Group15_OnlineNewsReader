<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".phuong_works.Fragment_podcast_2">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/thumbnail_podcast_2"
                android:id="@+id/thumbnail2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/linearLayout3">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:fontFamily="sans-serif-black"
                android:gravity="left|center"
                android:text="Empowering Millennials and Gen X families with Financial Education with Shari Rash"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/descrision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="top|start"
                android:text="In this episode of Mastering Your Financial Life, Judy Heft interviews Shari Rash, Founder of GWA Wealth, a virtual financial advisory firm that helps women and millennial families address financial challenges and questions in a fun, comfortable, no-nonsense way. Shari, who also hosts her own podcast called Money Chic, specializes in empowering millennials and Gen X families with financial knowledge. She focuses on simplifying financial strategies to help her clients balance living for today while planning for tomorrow."
                android:textSize="20dp"
                android:paddingLeft="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="sans-serif-condensed-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:id="@+id/upload_time"
                android:layout_marginLeft="20dp"
                android:textColor="#AAA9A9"
                android:text="September 16, 2024 | 01:12 pm GMT+7 | Podcast Financial" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="18dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/book_mark" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>