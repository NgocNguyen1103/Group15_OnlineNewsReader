<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Hình ảnh bài viết -->
    <ImageView
        android:id="@+id/t1_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/t1_drx" />

    <!-- Tiêu đề bài viết -->
    <TextView
        android:id="@+id/t1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đội tuyển SKT T1 tiến vào chung kết giải đấu thế giới"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingTop="8dp" />

    <!-- Mô tả ngắn bài viết -->
    <TextView
        android:id="@+id/t1_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đội tuyển SKT T1 đã có màn trình diễn ấn tượng, đánh bại đối thủ và tiến vào chung kết giải đấu thế giới Liên Minh Huyền Thoại. Đây hứa hẹn sẽ là trận đấu kịch tính và đáng xem nhất trong năm."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:paddingTop="4dp"
        android:paddingBottom="8dp" />

    <!-- Phần thông tin thời gian và danh mục -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Thời gian đăng bài -->
        <TextView
            android:paddingTop="2dp"
            android:id="@+id/t1_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 giờ trước"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:paddingTop="2dp"
            android:id="@+id/t1_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=" | Bóng đá"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:paddingLeft="4dp" />
        <ImageView
            android:id="@+id/save_article_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:contentDescription="Save article"
            android:src="@drawable/book_mark"
            android:layout_marginLeft="16dp" />
    </LinearLayout>

    <!-- Icon lưu trữ bài viết -->

</LinearLayout>
