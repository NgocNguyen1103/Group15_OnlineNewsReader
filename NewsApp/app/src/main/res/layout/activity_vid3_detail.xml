<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vid3_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ngoc_works.vid3_detailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frame_video">
            <VideoView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:id="@+id/video_view" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10.5dp"
            android:layout_marginTop="15dp"
            android:id="@+id/text"
            tools:ignore="InvalidId">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:text="Bryson DeChambeau wins second major"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/intro"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="American Bryson DeChambeau won his second US Open title on Sunday, edging Rory McIlroy in a nerve-shredding finale at Pinehurst No. 2 in Pinehurst, North Carolina.\nLIV Golf star DeChambeau carded a final round one-over 71 to finish one stroke ahead of his Northern Irish counterpart at six-under overall and add to his first major victory in 2020."/>

            <TextView
                android:fontFamily="sans-serif-condensed-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:id="@+id/upload_time"
                android:textColor="#AAA9A9"
                android:text="June 17, 2024 | 11:24 am GMT+7 | Sport" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:gravity="end"
                android:text="Jack Bantock, CNN"
                android:textSize="18dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:background="#d3d3d3"
                />

            <TextView
                android:fontFamily="sans-serif-condensed-light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
            <EditText
                android:fontFamily="sans-serif-condensed-light"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/Comment_Bar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Send your comment"
                android:inputType="text"
                android:background="@drawable/rounded_bar"
                android:paddingLeft="19dp"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
