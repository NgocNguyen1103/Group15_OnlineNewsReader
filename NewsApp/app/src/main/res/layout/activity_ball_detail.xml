<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/hotnews1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/news_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="World"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday, 4/9/2024, 21:08 (GMT+7)"
            android:textSize="12sp"
            android:textColor="#000000"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Will Vietnam crush Thailand, and if so, what will the score be?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="8dp" />

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/vn_tl_2"
            android:paddingBottom="30dp" />

        <TextView
            android:id="@+id/paragraph1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The match between the Vietnamese and Thai national teams in the AFF Cup final tonight is attracting the attention of millions of fans. This is the most anticipated showdown of the year, promising to bring thrilling moments on the pitch."
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/paragraph2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Throughout the preparation process, Coach Park Hang-seo has been actively organizing training sessions with a focus on strong attacking strategies and tight defense. Players like Quang Hai and Cong Phuong are expected to create breakthroughs for the team."
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/paragraph3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fans across the country are placing their trust in the Vietnamese team and eagerly anticipating a victory against their long-standing rivals, Thailand..."
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/news_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Reporter Group"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:paddingTop="8dp"
            android:paddingBottom="20dp"/>

        <LinearLayout
            android:layout_marginTop="100dp"
            android:id="@+id/btn_send_feedback"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Submit Feedback"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_right"
                app:tint="#000000" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
