<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:id="@+id/hotnews1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Danh mục tin tức -->
        <TextView
            android:id="@+id/news_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:color="@color/white"
            android:text="Thế giới"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#d32f2f"
            android:paddingBottom="4dp" />

        <!-- Thời gian đăng bài -->
        <TextView
            android:id="@+id/news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:color="@color/white"

            android:text="Thứ tư, 4/9/2024, 21:08 (GMT+7)"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:paddingBottom="8dp" />

        <!-- Tiêu đề bài viết -->
        <TextView
            android:textColor="@color/white"

            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Việt Nam liệu sẽ huỷ diệt Thái Lan với tỉ số bao nhiêu ?"
            android:textSize="20sp"
            android:textStyle="bold"

            android:paddingBottom="8dp" />

        <!-- Hình ảnh (nếu có) -->
        <ImageView
            android:id="@+id/news_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/vn_tl_2"
            android:paddingBottom="30dp" />


        <TextView
            android:id="@+id/paragraph1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trận đấu giữa đội tuyển Việt Nam và Thái Lan tại chung kết AFF Cup vào tối nay đang thu hút sự quan tâm của hàng triệu người hâm mộ. Đây là cuộc đối đầu được mong đợi nhất trong năm, hứa hẹn sẽ mang đến những giây phút kịch tính trên sân cỏ."
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:paddingBottom="12dp" /> <!-- Tạo khoảng cách sau đoạn văn này -->

        <TextView
            android:id="@+id/paragraph2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trong suốt quá trình chuẩn bị, HLV Park Hang-seo đã tích cực tổ chức các buổi tập luyện với chiến thuật tấn công mạnh mẽ và phòng ngự chặt chẽ. Các cầu thủ như Quang Hải và Công Phượng được kỳ vọng sẽ tạo ra những đột phá cho đội tuyển."
            android:textSize="16sp"
            android:textColor="@color/white"
            android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/paragraph3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người hâm mộ trên khắp cả nước đang đặt niềm tin vào đội tuyển Việt Nam và mong chờ chiến thắng trước đối thủ đầy duyên nợ Thái Lan.."
            android:textSize="16sp"
            android:textColor="@color/white"
            android:paddingBottom="12dp" />
        <!-- Tên tác giả -->
        <TextView
            android:id="@+id/news_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Nhóm Phóng Viên"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:paddingTop="8dp"
            android:paddingBottom="20dp"/>

        <LinearLayout

            android:id="@+id/btn_send_feedback"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <!-- Phần Text "Gửi ý kiến" -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gửi ý kiến"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <!-- Icon mũi tên -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_right"
                app:tint="#FFFFFF" />
        </LinearLayout>


    </LinearLayout>


</ScrollView>
