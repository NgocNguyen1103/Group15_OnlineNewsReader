<!-- res/layout/fragment_game.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Game 1 -->
        <LinearLayout
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/gameImage1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/game1"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gameName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Turbo Race 3D"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/playButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tạo thêm các game tiếp theo theo cấu trúc tương tự -->

        <!-- Game 2 -->
        <LinearLayout
            android:layout_margin="30dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/gameImage2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/game2"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gameName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Color maze"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/playButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play" />
            </LinearLayout>
        </LinearLayout>

        <!-- Game 3 và Game 4 có cấu trúc tương tự -->
        <!-- Game 2 -->
        <LinearLayout
            android:layout_margin="30dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/gameImage3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/game3"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gameName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game 3"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/playButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play" />
            </LinearLayout>
        </LinearLayout>
        <!-- Game 2 -->
        <LinearLayout
            android:layout_margin="30dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/gameImage4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/game4"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gameName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game 2"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/playButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
